{% extends "FrontBundle::base.html.twig" %}

{% block title %} Contactez-nous | Taqwira {% endblock title %}

{% block body %}

    <div id="video-login" class="block grey lighten-3">
        <div class="row">
            <div class="col s12 m6 offset-m3"><br>
                <h1 class="flow-text grey lighten-3 z-depth-0 card-panel">CONTACTEZ-NOUS</h1>
                <div id="profile-page-wall-share" class="row">
                    <div class="col s12">
                        <ul class="tabs z-depth-1">
                            <li class="tab col s3"><a class="black-text waves-effect waves-light active" href="#contact-us">Communiquer avec nous pour pouvoir créer votre centre.</a></li>
                            <div class="indicator" style="right: -1px; left: 546px;"></div>
                        </ul>
                        <!-- Form contact-->
                        <div class="form-contact">
                            {{ form_start(form) }}
                                <div id="contact-us" class="tab-content col s12  grey lighten-4">
                                    <div class="row">
                                        {% if app.request.hasPreviousSession %}
                                            {% for type, success in app.session.flashbag.all() %}
                                                {% for message in success %}
                                                    <div class="card alert-message z-depth-0 green lighten-5">
                                                        <div class="card-content green-text">
                                                            <p><i class="material-icons left">error</i>{{ message }}</p>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">account_circle</i>
                                            {{ form_widget(form.name) }}
                                            <label for="name" class="">Nom & Prénom</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">email</i>
                                            {{ form_widget(form.email) }}
                                            <label for="email" class="">Email</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">phone</i>
                                            {{ form_widget(form.phone) }}
                                            <label for="phone" class="">Téléphone</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">message</i>
                                            {{ form_widget(form.message) }}
                                            <label for="message" class="">Message</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12 right-align">
                                            <button type="submit" class=" waves-effect waves-light yellow accent-4 black-text btn">Envoyer</button>
                                        </div>
                                    </div>
                                </div>
                            {{ form_row(form._token) }}
                            {{ form_end(form, { 'render_rest': false } ) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# === CSS STYLE === #}
    <style>
        body{
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }
        html, body, .block {
            flex: 1 0 auto;
        }
        footer {
            padding-left: 0;
        }
    </style>
{% endblock body %}

