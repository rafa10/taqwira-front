{% extends "base.html.twig" %}

{% block title %} Match en vidéo | Taqwira {% endblock title %}

{% block body %}

    <div id="video-login" class="block grey lighten-3">
        <div class="row form-check-login">
            <div class="col s12 m6 offset-m3">
                <h1 class="flow-text grey lighten-3 z-depth-0 card-panel">MATCH EN VIDEO</h1>
                <!--=== Form content ================================================================================-->
                <div id="profile-page-wall-share" class="row">
                    <div class="col s12">
                        <ul class="tabs z-depth-1">
                            <li class="tab col s3"><a class="black-text waves-effect waves-light active" href="#reference">J’ai la référence de réservation.</a></li>
                            <div class="indicator" style="right: -1px; left: 546px;"></div>
                        </ul>
                        <!-- Reference-->
                        <div class="form-login-video">
                            {{ form_start(form, {'attr':{'class': 'formValidate'}}) }}
                                <div id="reference" class="tab-content col s12  grey lighten-4">
                                    <div class="row mess-error-mail"></div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="fas fa-barcode prefix"></i>
                                            {{ form_widget(form.reference_one) }}
                                            <label for="reference" class="">Référence de réservation *</label>
                                        </div>
                                        <div class="input-field col s12">
                                            <i class="fas fa-envelope prefix"></i>
                                            {{ form_widget(form.email) }}
                                            <label for="email" class="">E-mail *</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12 right-align">
                                            <button type="button" class=" waves-effect waves-light yellow accent-4 black-text btn" id="check-video-mail">Connexion</button>
                                        </div>
                                    </div>
                                </div>
                            {{ form_row(form._token) }}
                            {{ form_end(form, { 'render_rest': false } ) }}
                        </div>
                    </div>
                </div>
                <!--=== Preloader content ===========================================================================-->
                <div id="preloader-page-content" class="card-panel center-align z-depth-0 hide hide-on-small-only" style="position: absolute; top: 40%; left: 42%;">
                    <div class="preloader-wrapper small active">
                        <div class="spinner-layer spinner-blue-only">
                            <div class="circle-clipper left">
                                <div class="circle"></div>
                            </div><div class="gap-patch">
                                <div class="circle"></div>
                            </div><div class="circle-clipper right">
                                <div class="circle"></div>
                            </div>
                        </div>
                    </div><br>S'il vous plaît, attendez...
                </div>
            </div>
        </div>
    </div>

    {# === CSS STYLE === #}
    <style>
        body{
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }
        html, body, .block {
            flex: 1 0 auto;
        }
        footer {
            padding-left: 0;
        }
    </style>
{% endblock body %}

