{% extends "base.html.twig" %}

{% block title %} Match en vidéo | Taqwira {% endblock title %}

{% block body %}

    <div id="booking-login" class="block grey lighten-3">
        <div class="row">
            <div class="col s12 m8 offset-m2">
                <div class="row">
                    <h1 class="flow-text grey lighten-3 z-depth-0">MATCH EN VIDEO</h1>
                    <div class="col s12 card z-depth-0">
                        <h5 class="flow-text"><i class="small material-icons left">videocam</i> Ma vidéo: <span class="lime-text text-darken-2">{{ booking.reference }}</span></h5>
                    </div>
                    {# == Coordonnées du client ======================================================================#}
                    <div class="col s12 m5 hide-on-small-only" style="padding: 0px">
                        <ul class="collection with-header">
                            <li class="collection-header"><h5 class="flow-text">Coordonnées du client</h5></li>
                            <li class="collection-item"><i class="fas fa-user left"></i>{{ booking.customer.firstname }} {{ booking.customer.lastname }}</li>
                            <li class="collection-item"><i class="fas fa-envelope left"></i>{{ booking.customer.email }}</li>
                            <li class="collection-item"><i class="fas fa-phone-volume left"></i>{{ booking.customer.phone }}</li>
                        </ul>
                    </div>
                    {#=== Détails de ma réservation ==================================================================#}
                    <div class="col s12 m7" style="padding: 0px">
                        <ul class="collection">
                            <li class="collection-item">
                                <div class="row" style="margin-bottom: 0px;">
                                    <div class="col s6">
                                        <h5 class=""><i class="small material-icons left">business</i> {{ booking.field.center.name }}</h5>
                                        <i class="material-icons left">view_array</i> {{ booking.field.name }}
                                    </div>
                                    <div class="col s6 datetime-col">
                                        <p><i class="material-icons left">event</i>{{ booking.date|date('m/d/Y') }}</p>
                                        <p><i class="material-icons left">timer</i><b>{{ booking.timeStart|date('H:i') }}</b></p>
                                    </div>
                                </div>
                            </li>
                            <li class="collection-item">
                                {% if video is not null %}
                                    <iframe width="100%" height="250" src="{{ video.url }}" frameborder="0" allowfullscreen=""></iframe>
                                {% else %}
                                    <div class="card alert-message z-depth-0 red lighten-5">
                                        <div class="card-content red-text">
                                            <p><i class="material-icons left">error</i>Cette réservation ne contient aucune vidéo</p>
                                        </div>
                                    </div>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# === CSS STYLE === #}
    <style>
        body{
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }
        html, body, .block {
            flex: 1 0 auto;
        }
        footer {
            padding-left: 0;
        }
        .padding{
            padding: 0px;
        }
        .datetime-col{
            border-left: 1px dotted #8c8b8b;
        }
    </style>
{% endblock body %}

